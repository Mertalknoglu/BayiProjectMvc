@model IEnumerable<project.Models.MusteriVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.semanticui.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.semanticui.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.1/semantic.min.js"></script>

<p>
    
    @Html.ActionLink("Yeni Kayıt Oluşturma", "Create",null, new { @class = "btn btn-primary" })
</p>
<table id="example" class="ui celled table" style="width:100%">
    <thead>
    <th>
        @Html.DisplayNameFor(model => model.bayiVM.BayiAdi)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.musteriVM.Adi)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.musteriVM.Soyadi)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.musteriVM.VergiNo)
    </th>
    <th></th>
    </th>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.bayiVM.BayiAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriVM.Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriVM.Soyadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.musteriVM.VergiNo)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.musteriVM.id },  new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Detay", "Details", new { id = item.musteriVM.id },     new { @class = "btn btn-info" }) |
                         @Html.ActionLink("Sil", "Delete", new { id = item.musteriVM.id }, new { @class = "btn btn-danger" })
                </td>
            </tr>

        }

    </tbody>
  

</table>

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
